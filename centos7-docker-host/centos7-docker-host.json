{
  "builders": [
    {
      "type": "virtualbox-iso",
      "output_directory": "output/virtualbox-builder-{{user `boxname`}}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "boot_wait": "10s",

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",

      "iso_url": "{{user `mirror`}}/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-DVD.iso",
      "iso_checksum": "ee505335bcd4943ffc7e6e6e55e5aaa8da09710b6ceecda82a5619342f1d24d9",
      "iso_checksum_type": "sha256",


      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "disk_size": 40960,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "960"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `boxname`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/fix-slow-dns.sh",
        "scripts/sshd.sh",
        "scripts/vmtools.sh",
        "scripts/docker.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "output/{{.Provider}}-{{user `boxname`}}.box"
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `vagrant_cloud_token`}}",
        "box_tag": "zspencer/{{user `boxname` }}",
        "version": "{{user `version`}}"
      }
    ]
  ],
  "variables": {
    "boxname": "centos7-docker-host",
    "mirror": "http://mirrors.kernel.org/centos",
    "version": "",
    "vagrant_cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}"
  }
}
